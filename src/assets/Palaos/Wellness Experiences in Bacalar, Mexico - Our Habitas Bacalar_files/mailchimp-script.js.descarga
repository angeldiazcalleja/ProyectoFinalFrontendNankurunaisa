jQuery(document).ready(function($){$('#mail-submit-btn').on('click',function(e){e.preventDefault();var email=$('.mp-email').val();$.ajax({url:mpscriptjs.ajaxurl,type:"POST",data:{action:'mp_subscribe',email:email,fname:'',lname:'',},beforeSend:function(){$('.ajax-loader').show();$('#mp_success_msg').empty()},success:function(result){$('.ajax-loader').hide();var data=$.parseJSON(result);$('#mp_success_msg').append(data.result.message)},error:function(result){$('.ajax-loader').hide();var data=$.parseJSON(result);$('#mp_success_msg').append(data.result.message)}})})})